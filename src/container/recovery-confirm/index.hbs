{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section" action="">
        <h1 class="page__title">Новий Пароль</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" label="Ваш код" type="number" name="code"
                placeholder="Введіть код"}}
                <span name="code" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль" type="password"
                name="password"
                placeholder="Введіть пароль"}}
                <span name="password" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль ще раз" type="password"
                name="passwordAgain"
                placeholder="Введіть пароль"}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>


        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Відновити</button>
        <span class="alert alert--disabled">Увага, помилка!</span>
    </form>
</div>

